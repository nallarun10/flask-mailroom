{% extends 'base.jinja2' %}


{% block subtitle %}Submit New Donations{% endblock subtitle %}

{% block content %}

<form method='POST'>
    {% if error %}<p>{{error}}</p>{% endif %}
    <label for="donor-input">Donor Name:</label><input id="donor-input" type="text" name="name"><br>
    <label for="donation-input">Donation:</label><input id="donation-input" type="integer" name="amount"><br>
    <input type="submit" value="Submit Donation">

{% endblock content %}